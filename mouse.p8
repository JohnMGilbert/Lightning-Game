pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
function _init()
  poke(0x5f2d,1)
  x=-1000
  y=-1000
  board_x=50
  board_y=50
end

function _update60()
end

function _draw()
cls()
_move_board()
_draw_board()

print(x..","..y)
spr(0,stat(32),stat(33))
spr(0,x,y)
if (stat(34)==1) then x=stat(32) y=stat(33) end
end

function _draw_board()
  spr(1,board_x,board_y,3,3)
end

function _move_board()
  if btn(0) then board_x -= 1 end
  if btn(1) then board_x += 1 end
  if btn(2) then board_y -= 1 end
  if btn(3) then board_y += 1 end 
end

